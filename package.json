{
    "name": "plz2wk-monorepo",
    "private": true,
    "type": "module",
    "workspaces": [
        "www/frontend",
        "www/server"
    ],
    "scripts": {
        "dev": "concurrently \"npm --prefix www/frontend run dev\" \"npm --prefix www/server run dev\"",
        "build": "npm --prefix www/frontend run build",
        "download_geodata": "node scripts/download_geodata.js",
        "update": "git pull origin main && npm install && npm run download_geodata && npm run build",
        "postinstall": "npm run download_geodata"
    },
    "devDependencies": {
        "concurrently": "^9.1.2"
    },
    "dependencies": {
        "node-fetch": "^2.7.0",
        "shapefile": "^0.6.6",
        "shpjs": "^6.1.0",
        "unzipper": "^0.12.3"
    }
}
